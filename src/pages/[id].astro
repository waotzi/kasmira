---
import BaseTemplate from "../components/templates/BaseTemplate.astro";
import getUsername from "../composables/session";
const username = getUsername()

if (username === null)
    return Astro.redirect('/')

---

<BaseTemplate>
    <div class="profile">
      <h1>{username}'s Profile</h1>
      <form class="public-address-form">
        <label for="public-address">Add Public Crypto Address:</label>
        <input type="text" id="public-address" name="public-address" required>
        <button type="submit">Add</button>
      </form>
    </div>
    <div class="cards-container">
        <div class="card">
          <h2>Card Title</h2>
          <p>Card content goes here.</p>
        </div>
        <div class="card">
          <h2>Card Title</h2>
          <p>Card content goes here.</p>
        </div>
        <div class="card">
          <h2>Card Title</h2>
          <p>Card content goes here.</p>
        </div>
        <div class="card">
          <h2>Card Title</h2>
          <p>Card content goes here.</p>
        </div>
    </div>
</BaseTemplate>


<style>
    .profile {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 40px;
    }
    
    .public-address-form {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 20px;
      width: 300px;
    }
    .cards-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      grid-gap: 20px;
      margin-top: 40px;
    }
    
    .card {
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1);
      padding: 16px;
    }
    
    .card h2 {
      font-size: 18px;
      margin-bottom: 8px;
    }
    
    .card p {
      font-size: 14px;
      margin-bottom: 0;
    }
    
  </style>
  
---
import BaseTemplate from "../components/templates/BaseTemplate.astro";
import getUsername from "../composables/session";
import CryptoCard from "../components/atoms/CryptoCard.astro";
import QRCode from 'qrcode';

const username = getUsername()

if (username === null)
    return Astro.redirect('/')


// Create a QR code image
const createQRCode = async (text) => {
  try {
    const qrCode = await QRCode.toDataURL(text);
    return qrCode;
  } catch (error) {
    console.error(error);
  }
};

// Call the function and pass in the text to encode
const qrCodeImage = await createQRCode('0x742d35Cc6634C0532925a3b844Bc454e4438f44e');
---

<BaseTemplate>
    <div class="profile">
      <h1>{username}'s Profile</h1>
      <form class="public-address-form">
        <label for="public-address">Add Public Crypto Address:</label>
        <input type="text" id="public-address" name="public-address" required>
        <button type="submit">Add</button>
      </form>
    </div>
    <div class="cards-container">
        <ul role="list" class="link-card-grid">
          <CryptoCard title="Bitcoin" key="1BvBMSEYstWetqTFn5Au4m4GFg7xJaNVN2" image={qrCodeImage} id={1} />
          <CryptoCard title="Ethereum" key="0x742d35Cc6634C0532925a3b844Bc454e4438f44e" id={2}/>
          <CryptoCard title="Litecoin" key="LZnVbRcYZnT9gXtrmJGpZNQMzvCwFJxi8t" id={3} />
          <CryptoCard title="Bitcoin Cash" key="qqz9k5ss5pq5dvhdkpfwzj5x5lj6mr0mjsgkjs7wxv" id={4} />  
        </ul>
    </div>
</BaseTemplate>


<style>
    .profile {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 40px;
    }
    
    .public-address-form {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 20px;
      width: 300px;
    }
  
</style>
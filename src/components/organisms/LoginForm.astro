---

export interface Props {
	title?: string;
    actionUrl?: string;
}

const { title, actionUrl } = Astro.props;

---

<div class="login-page">
    <div class="login-form-container">
    <form action={actionUrl} method="POST">
        <h2>{title}</h2>
        <slot/>
    </form>
    </div>
</div>
  
<style>
  .login-page {
    min-height: 60vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
</style>